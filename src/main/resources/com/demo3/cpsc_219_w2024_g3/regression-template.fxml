<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <HBox prefHeight="67.0" prefWidth="474.0" spacing="20.0">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <Label text="Data File Path:" />
                <TextField fx:id="filePathField" alignment="CENTER" />
                <Label text="Model Order:" />
                <TextField fx:id="modelOrderField" alignment="CENTER" />
            </HBox>
            <HBox prefHeight="67.0" prefWidth="474.0" spacing="20.0">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
                <Button alignment="CENTER" onAction="#finalizeInputs" text="Regress"/>
                <Button alignment="CENTER" onAction="#displayHelpMessage" text="Help"/>
                <Label fx:id="statusLabel"/>
            </HBox>
            <LineChart fx:id="lineChart">
                <xAxis>
                    <NumberAxis />
                </xAxis>
                <yAxis>
                    <NumberAxis />
                </yAxis>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            </LineChart>
            <VBox alignment="CENTER" spacing="5">
                <Label text="Coefficients:" />
                <Label fx:id="coefLabel" />
                <Label text="Phi Value:" />
                <Label fx:id="phiLabel" />
                <Label text="R-Squared:" />
                <Label fx:id="rSquaredLabel" />
            </VBox>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
        </VBox>
    </center>
</BorderPane>
